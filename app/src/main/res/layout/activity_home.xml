<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <!-- Table Layout -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Column 1 - View Profile Button with Icon -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Profile"
                android:drawableTop="@drawable/profile_icon"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_gradient"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <!-- Column 2 - View Shop Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewShop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Shops"
                android:drawableTop="@drawable/shop"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_gradient"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </TableRow>

        <!-- Row 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View orders"
                android:drawableTop="@drawable/orders_icon"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_gradient"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <!-- Column 2 - Logout Button with Icon -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonTableBookings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tables"
                android:drawableTop="@drawable/booking_reservation"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_gradient"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Column 2 - Logout Button with Icon -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonChatbot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chatbot"
                android:drawableTop="@drawable/profile_icon"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_gradient"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Column 2 - Logout Button with Icon -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout"
                android:drawableTop="@drawable/ic_logout"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_gradient"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
